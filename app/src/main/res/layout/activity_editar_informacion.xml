    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress" />



    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
