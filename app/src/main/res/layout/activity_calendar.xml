<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_calendar"
    android:orientation="vertical"
    tools:context=".CalendarActivity">

    <ImageButton
        android:id="@+id/ahok"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="350dp"
        android:background="@drawable/ic_menu_abierto">


    </ImageButton>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <CalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background"
            android:dateTextAppearance="@style/TextAppearance.AppCompat.Medium"
            android:selectedWeekBackgroundColor="@color/colorPrimary"></CalendarView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="50dp"></Button>


        <Button
            android:id="@+id/todo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/ic_contenido"
            android:backgroundTint="@color/colorPrimary"
            android:tint="@color/colorAccent"></Button>

    </LinearLayout>

</LinearLayout>