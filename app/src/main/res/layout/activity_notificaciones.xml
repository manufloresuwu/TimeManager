<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notificaciones"
    android:orientation="vertical"
    android:background="@drawable/fondo_notifications">

    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background">


        <Switch
            android:id="@+id/activarN"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:scrollbarThumbHorizontal="@color/colorPrimary"
            android:scrollbarThumbVertical="@color/colorPrimaryDark"
            android:scrollbarTrackHorizontal="@color/colorAccent"
            android:scrollbarTrackVertical="@color/colorPrimaryDark"
            android:text="@string/notifications_receive"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btNoti"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginLeft="100dp"
            android:layout_marginVertical="8dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/notifications_prove"
            android:textColor="#FFFFFF" />
</LinearLayout>
</LinearLayout>